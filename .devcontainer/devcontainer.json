{
  "name": "CMMS Codespace",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.9"
    }
  },
  "customizations": {
    "vcode": {
      "extensions": [
        "dbaeumer.vscode.eslint",
        "ms-python.python",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y docker-compose && docker-compose up -d",
  "forwardPorts": [8080, 3306],
  "remoteUser": "vscode"}